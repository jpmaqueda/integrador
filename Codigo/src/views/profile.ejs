    <title>Tu perfil</title>
</head>
<body>
    <%- include('partial/header')  %>
    <main>
        <div class="informacion1">
            <h2>Hola <%= user.nombre %> </h2>
            <p>El email registrado es: <%= user.email %> </p>
            <p class="titulo">Campos adicionales</p>
            <form action=""method="post">
                <div>
                    <label for="direccion">¿Quieres agregar una dirección para tu proximas compras?</label><br>
                    <input
                    id="direccion"
                    name="direccion"
                    type="text"
                    placeholder="Ingrese la direccion aqui">
                </div>
            </form>
            <div>
                <a href="/logout">Cerrar sesión</a>
            </div>
        </div>
    </main>
    <%- include('partial/footer')  %>
