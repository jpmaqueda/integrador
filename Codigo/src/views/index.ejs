<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="./css/styles.css" />
    <link rel="stylesheet" href="./css\slider.css" />
    <link rel="stylesheet" href="./css\categoria.css" />
    <link rel="stylesheet" href="./css\cajaprod1.css" />
    <%- include('partial/head') %>
    <link rel="stylesheet" href="css/footer.css"> 
    <link rel="stylesheet" href="./css\filtrosyorg.css" />
    <meta name="viewport" content="width = device-width, initial-scale = 1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/efecb5d88a.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    
    <%- include('partial/header') %>
   
    <main>
      <div class="sliderfull">
        <img class="sliderimg" src="imagenes\bannerej.jpg" />
      </div>
      <nav class="filtrosyorg">
        <button class="menufiltro">Organiza</button>
        <button class="menufiltro">Filtros</button>
      </nav>
      <div class="categorias">
        <ul class="catbox">
          <li class="catboxitem">
            Living <a class="boxitem"><i class="fa-solid fa-couch"></i> </a>
          </li>
          <li class="catboxitem">
            Dormitorio
            <a class="boxitem"><i class="fa-sharp fa-solid fa-house"></i></a>
          </li>
          <li class="catboxitem">
            Cocina
            <a class="boxitem"><i class="fa-solid fa-glass-water"></i></a>
          </li>
          <li class="catboxitem">
            Bano <a class="boxitem"><i class="fa-solid fa-bath"></i></a>
          </li>
          <li class="catboxitem">
            Jardin
            <a class="boxitem"><i class="fa-sharp fa-solid fa-baseball"></i></a>
          </li>
          <li class="catboxitem">
            Bar
            <a class="boxitem"><i class="fa-sharp fa-solid fa-house"></i></a>
          </li>
        </ul>
      </div>
      <div class="columnas">
        <nav class="cajadecaja">
          <!-- <nav class="menufiltro2"> </nav> -->
          <div class="columna1">
            <% productslectura.forEach(prod=>{%>
              <a class="" href="/productDetail/<%= prod.id %> ">
              <div class="preciodesc">
              <div class="imagenboxcontainer">
                <img class="imagencaja" src="imagenes\productos/<%= prod.imagen %>">
              </div>
              <div class="precio-descripcion">
                <p class="descripcion" style="text-transform: uppercase"><%= prod.nombre %></p>
                <p class="precio"><%= prod.precio%> $</p>
              </div>
            </div>
            </a>
            <% })%>
          </div>
        </nav>
      </div> 
    </main>
  </body>
  <%- include('partial/footer') %>
</html>
