      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>productedit</title>
  </head>
  <body>
    <header><%- include('partial/header') %></header>
    <main>
      <% if(typeof product != "undefined"){%>
      <nav class="cajaGeneral">
        <form class="form" action="" enctype="multipart/form-data">
          <div class="cajaDeImagen">
            <img class="imagen" src="/imagenes/productos/<%= product.img%>">
            <div class="cambiaimg">
              <div class="inputextoimg">
                <label for="files" class="label">Seleciona una imagen</label>
            <input type="file" onchange="readURL(this);" accept="image/png, image/jpeg" style="visibility:hidden;" id="files">
            </div>
            </div>
          </div>
        
          <div class="camposform">
            <p class="titulo">Configura tu producto</p>
        <input type="text" class="inputexto" value="<%= product.nombre%>">
        <input type="number" class="inputexto" value="<%= product.precio%>">
        <input type="number" class="inputexto" value="<%= product.stock%>">
        <input type="text" class="inputexto" value="<%= product.color%>">
        <input type="text" class="inputexto" value="<%= product.altura%>">
        <input type="text" class="inputexto" value="<%= product.profundidad%>">
        <input type="text" class="inputexto" value="<%= product.anchura%>">
        <input type="submit" class="inputexto" value="Enviar" />
          </div>
        </form>
      </nav>
      <% }%>
    </main>
    <footer>
      <%- include('partial/footer') %>
    </footer>
  </body>
</html>
